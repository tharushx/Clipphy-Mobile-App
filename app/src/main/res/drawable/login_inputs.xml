<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set the full black background with opacity (80% visible) -->
    <solid android:color="#66000000" /> <!-- CC is for 80% opacity -->

    <!-- Rounded border with a light stroke to make edges visible -->
    <corners android:radius="15dp" />
    <stroke android:width="2dp" android:color="#66FFFFFF" /> <!-- 40% visible white border -->
</shape>